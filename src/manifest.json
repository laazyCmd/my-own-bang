{
    "manifest_version": 2,
    "name": "My Own Bang!",
    "description": "Make your own custom bangs, only available for DuckDuckGo.",
    "version": "1.0",

    "icons": {
        "48": "assets/icon.png"
    },

    "background": {
        "scripts": [ "main.js" ]
    },

    "permissions": [
        "storage",
        "webNavigation"
    ],

    "options_ui": {
        "page": "settings.html"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "addon@example.com"
        }
    }
}